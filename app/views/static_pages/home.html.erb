<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
    </div>
<% else %>

<div class="jumbotron center hero-unit">
  <h1>Welcome to the KARMA</h1>
  <p>
  <h2>the best way to find great local businesses in Kazakhstan</h2>
  </p>


  <p><%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %></p>

</div>

